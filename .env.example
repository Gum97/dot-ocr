# Environment Variables Configuration
# Copy this file to .env and update with your values

# Application
DEBUG=false
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000

# Model Configuration
MODEL_PATH=./weights/DotsOCR
USE_VLLM=false  # Set to true if using vLLM server
VLLM_HOST=127.0.0.1
VLLM_PORT=8000

# Device (auto, cpu, cuda)
DEVICE=auto

# OCR Settings
DPI=200
MIN_PIXELS=200704  # 256 * 28 * 28
MAX_PIXELS=1003520  # 1280 * 28 * 28

# Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Document Conversion
USE_LIBREOFFICE=false
LIBREOFFICE_PATH=

# Storage (will be created automatically)
UPLOAD_DIR=./uploads
RESULTS_DIR=./results
TEMP_DIR=./temp

# Optional: Redis
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=["*"]
